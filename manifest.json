{
  "manifest_version": 2,
  "name": "GitHub Email Backlog",
  "version": "0",

  "description": "Update your GitHub status with the current length of your email backlog.",

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "incognito": "not_allowed",
  "options_page": "options.html",
  "permissions": [
    "alarms",
    "cookies",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://github.com/*"
  ]
}
